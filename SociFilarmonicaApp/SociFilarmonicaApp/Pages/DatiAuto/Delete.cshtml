@page
@model SociFilarmonicaApp.Pages.DatiAuto.DeleteModel

@{
    ViewData["Title"] = "Cancella";
}

<h1>Cancella</h1>

<h3>Sei sicuro di voler cancellare questa tipologia di veicolo?</h3>
<div>
    <h4>Tipologia di auto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InfoAuto.TipoAuto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfoAuto.TipoAuto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InfoAuto.Carburante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfoAuto.Carburante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InfoAuto.RimborsoKm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfoAuto.RimborsoKm)
        </dd>
        <dt class="col-sm-2">
            Soci che usano questa tipologia di auto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InfoAuto.SociConQuestaAuto)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="InfoAuto.ID" />
        <input type="submit" value="Elimina" class="btn btn-danger" /> |
        <a asp-page="./Index">Torna alla lista</a>
    </form>
</div>
