@page
@model SociFilarmonicaApp.CalcolaModel
@{
    ViewData["Title"] = "Calcola";
}

<h1>Calcola il rimborso</h1>
<h2 class="text-muted">@Model.DatiCalcolo.Nome @Model.DatiCalcolo.Cognome</h2>

<hr />

<form method="post">
    <div class="form-row">
        <div class="col-md-6 pr-3">
            <h6>Lista prove</h6>
            <div class="form-group">
                <input asp-for="DatiCalcolo.ListaProve[0]" type="date" class="form-control" />
                <span asp-validation-for="DatiCalcolo.ListaProve[0]" class="text-danger"></span>
            </div>
            @for (int i = 1; i < Model.DatiCalcolo.ListaProve.Count; i++)
            {
                <div class="form-group">
                    <input asp-for="DatiCalcolo.ListaProve[i]" type="date" class="form-control" />
                    <span asp-validation-for="DatiCalcolo.ListaProve[i]" class="text-danger"></span>
                </div>
            }
            <div class="form-row">
                <div class="form-group col">
                    <button type="submit" asp-page-handler="AddDataProva" class="btn btn-secondary float-right"><i class="fa fa-plus"></i></button>
                </div>
            </div>
            <hr />
            <h6>Altri costi (opzionale)</h6>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="DatiCalcolo.AltriCosti[0].Descrizione" class="control-label"></label>
                    <input asp-for="DatiCalcolo.AltriCosti[0].Descrizione" class="form-control" />
                    <span asp-validation-for="DatiCalcolo.AltriCosti[0].Descrizione" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="DatiCalcolo.AltriCosti[0].Costo" class="control-label"></label>
                    <input asp-for="DatiCalcolo.AltriCosti[0].Costo" class="form-control" />
                    <span asp-validation-for="DatiCalcolo.AltriCosti[0].Costo" class="text-danger"></span>
                </div>
            </div>
            @for (int i = 1; i < Model.DatiCalcolo.AltriCosti.Count; i++)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="DatiCalcolo.AltriCosti[i].Descrizione" class="control-label"></label>
                        <input asp-for="DatiCalcolo.AltriCosti[i].Descrizione" class="form-control" />
                        <span asp-validation-for="DatiCalcolo.AltriCosti[i].Descrizione" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="DatiCalcolo.AltriCosti[i].Costo" class="control-label"></label>
                        <input asp-for="DatiCalcolo.AltriCosti[i].Costo" class="form-control" />
                        <span asp-validation-for="DatiCalcolo.AltriCosti[i].Costo" class="text-danger"></span>
                    </div>
                </div>
            }
            <div class="form-row">
                <div class="form-group col">
                    <button type="submit" asp-page-handler="AddAltroCosto" class="btn btn-secondary float-right"><i class="fa fa-plus"></i></button>
                </div>
            </div>
        </div>
        <div class="col-md-6 border-left pr-2">
            <div class="form-group">
                <label asp-for="DatiCalcolo.Distanza" class="control-label"></label>
                <input asp-for="DatiCalcolo.Distanza" class="form-control" />
                <span asp-validation-for="DatiCalcolo.Distanza" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatiCalcolo.RimborsoKm" class="control-label"></label>
                <input asp-for="DatiCalcolo.RimborsoKm" class="form-control" />
                <span asp-validation-for="DatiCalcolo.RimborsoKm" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>

